<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="#42A5F5" />
            <gradient android:angle="-90" android:startColor="#42A5F5" android:endColor="#42A5F5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="#42A5F5" />
            <solid android:color="#42A5F5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#80000000" />
            <gradient android:angle="-90" android:startColor="#80000000" android:endColor="#80000000" />
        </shape>
    </item>
</selector>